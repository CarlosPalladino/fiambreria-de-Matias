
<%-include('../includes/head.ejs') %> 

<body>
    <%-include('../includes/header.ejs') %> 
    <main>
        <figure class="banner-categoria">
            <img src="/images/category-images/banner-categorias.jpg">
        </figure>
        <nav class="return-nav">
            <a href="/products/categorias"><i class="fa-solid fa-backward"></i> Volver</a>
        </nav>
        <h2 class="titular"><%= categoria.name.toUpperCase()%></h2>
        
        <nav class="products-nav">
            <% products.forEach(p => { %>
                <article class="item-article">
                        
                    <a href="/products/detail/<%=element.id %>"><img class="item-image"
                            src="/images/product-images/<%= element.images%>">


                    </a>
                    <h4 class="item-name"><%= element.name %> </h4>
                    <% if (element.descuento) { %>
                        <span class="descuento"><%=element.descuento%>% de descuento</span>
                        <div class="precio-descuento">
                            
                            <%let precioDesc= element.price - (element.price/100*element.descuento)%>
                            <h5 class="item-price">$<%= parseInt(precioDesc) %>,00</h5>
                            <h6>$<%=parseInt(element.price) %>,00</h6>
                        </div>
                     
                    <% } else{%>

                    <h4 class="item-price">$<%= element.price %> </h4>
                    <% } %>
                </article>
             
            <% }) %>
        </nav>

        
    </main>
    <%-include('../includes/footer.ejs') %>
    
</body>
    
</html>
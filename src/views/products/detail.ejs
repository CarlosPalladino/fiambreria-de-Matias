<%-include('../includes/head.ejs') %>


    <body>
        <%-include('../includes/header.ejs') %>
            <main>
                <div>

                    <section class="producto">

                        <article id="articles_container">
                            <picture id="pic">
                                <img src="/images/product-images/<%= product.images%>" alt="foto del producto" id="img">
                            </picture>
                            <ul id="productInfo">
                                <li>
                                    <h3>Nombre</h3>
                                    <p>
                                        <%=product.name%>
                                    </p>
                                </li>
                                <li>
                                    <h3>Marca</h3>
                                    <p>
                                        <%=product.marca%>
                                    </p>
                                </li>
                                <li>
                                    <h3>Precio</h3>

                                    <div id="precioDescuento">
                                        <%let precioDesc=product.price - (product.price/100*product.descuento)%>
                                            <h5 class="item-price">$<%= parseInt(precioDesc) %>,00</h5>
                                            <h6>$<%=parseInt(product.price) %>,00</h6>


                                </li>
                                <li>
                                    <h3>Kg</h3>
                                    <p>
                                        <%=product.peso %>
                                    </p>
                                </li>


                            </ul>

                            <section class="detalles">
                                <h3>Descripcion del producto</h3>
                                <p>
                                    <%=product.description%>
                                </p>
                            </section>
                        </article>
                </div>

                </section>
                </div>

            </main>



    </body>
    <%-include('../includes/footer.ejs') %>

        </html>